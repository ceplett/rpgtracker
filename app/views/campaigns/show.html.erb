<p>
  <b>Gm:</b>
  <%= @campaign.gm.name %>
</p>
<p>
  <b>Title:</b>
  <%= @campaign.title %>
</p>
<p>
  <b>Description:</b>
  <%= @campaign.description %>
</p>

<% if @campaign.gm?(current_user) %>
<ul id="invitations">
  <%= render @campaign.invitations%>
</ul>
<%= semantic_form_for @invitation, :url => [@campaign, @invitation], :remote => true do |form| %>
  <%= form.inputs 'Invite Players' do %>
    <%= form.input :email %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button :label => 'Send Invitation'%>
  <% end %>
<% end %>
<% end %>

<h2>Characters</h2>
<div class="characters">
  <%= render @campaign.characters %>
</div>

<ul>
  <li><%= link_to 'Edit', edit_campaign_path(@campaign) %></li>
</ul>
