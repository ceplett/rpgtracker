<h2>Sign up</h2>
<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |form| %>
  <%= form.inputs do %>
    <%= form.input :name %>
    <%= form.input :email %>
    <%= form.input :password %>
    <%= form.input :password_confirmation %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button :label => 'Sign up' %>
  <% end %>
<% end %>
<%= render :partial => "devise/shared/links" %>
